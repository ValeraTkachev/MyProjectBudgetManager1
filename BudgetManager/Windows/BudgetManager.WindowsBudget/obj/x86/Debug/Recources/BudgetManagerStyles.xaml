        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid HorizontalAlignment="Center" 
                          VerticalAlignment="Center" 
                          Width="90"
                          Margin="0,-10,0,0">

                        <Button Width="80"
                                Height="80"
                                Margin="0,-20,0,0" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"  
                                Command="{Binding AllSubcategoriesCommand, Source={Binding Source={StaticResource Locator}, Path=MainPageViewModel}}">

                            <Button.Template>

                                <ControlTemplate  TargetType="Button">
                                    <Grid>
                                        <Ellipse Stretch="UniformToFill" 
                                                 StrokeThickness="2"
                                                 Stroke="{Binding StrokeColor}">

                                            <Ellipse.Fill>

                                                <LinearGradientBrush StartPoint="0,0"
                                                                     EndPoint="0,1" >

                                                    <GradientStop Color="Gray"
                                                                  Offset="{Binding Percent}"/>

                                                    <GradientStop Color="{Binding Color}" 
                                                                  Offset="{Binding Percent}"/>

                                                </LinearGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <Image Source="{Binding Icon}" 
                                               Width="30"
                                               Height="30" 
                                               Margin="0,0,0,10"/>

                                        <TextBlock Text="{Binding Name}"
                                                   Width="56"
                                                   TextAlignment="Center"
                                                   TextTrimming="WordEllipsis"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" 
                                                   Margin="0,30,0,0"/>

                                    </Grid>

                                </ControlTemplate>

                            </Button.Template>

                        </Button>

                        <StackPanel Orientation="Vertical" 
                                    Margin="0,100,0,0">

                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center">

                                <TextBlock Text="$" 
                                           Foreground="{Binding Color}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                                <TextBlock Text="{Binding Remaining}"
                                           Foreground="{Binding Color}" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">

                                <TextBlock Text="$" 
                                           Foreground="Gray" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                                <TextBlock Text="{Binding Budgeted}" 
                                           Foreground="Gray" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MainAllTransactionsGridView" TargetType="GridView">
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>

                    <Border BorderBrush="{StaticResource ForBackGroundAddButton}" BorderThickness="4">

                        <Grid Background="LightBlue" 
                              Width="310" 
                              Height="70"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">

                            <StackPanel Orientation="Horizontal" >

                                <Image Source="{Binding IconName}"
                                       Width="30" 
                                       VerticalAlignment="Center"/>

                                <StackPanel Orientation="Vertical" 
                                            VerticalAlignment="Center"
                                            Margin="5,0,0,0">

                                    <TextBlock Text="{Binding Name}"
                                               TextAlignment="Left"
                                               TextTrimming="WordEllipsis"
                                               Width="130"  
                                               Foreground="Black"/>

                                    <TextBlock Text="{Binding AccountName}"
                                               TextAlignment="Left"
                                               TextTrimming="WordEllipsis"
                                               Width="130" 
                                               Foreground="{Binding TextColor}" 
                                               Margin="0,-5,0,0"/>

                                </StackPanel>

                                <StackPanel Orientation="Vertical" 
                                            VerticalAlignment="Center"
                                            Margin="72,10,0,0">

                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right" >

                                        <TextBlock Text="$"   
                                                   Foreground="{Binding TextColor}"/>

                                        <TextBlock Text="{Binding Count}" 
                                                   Foreground="{Binding TextColor}"/>

                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">

                                        <TextBlock Text="{Binding Day}" 
                                                   Foreground="Gray"/>

                                        <TextBlock Text="."  
                                                   Foreground="Gray" />

                                        <TextBlock Text="{Binding MonthNumber}" 
                                                   Foreground="Gray" />

                                        <TextBlock Text="."
                                                   Foreground="Gray"/>

                                        <TextBlock Text="{Binding Year}"
                                                   Foreground="Gray" />

                                    </StackPanel>

                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>


